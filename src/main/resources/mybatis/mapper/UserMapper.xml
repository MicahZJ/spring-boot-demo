<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mazj.mapper.UserMapper">
    <select id="queryUserList" resultType="com.mazj.pojo.User">
        select * from sys_user
    </select>

    <select id="queryUserById" resultType="com.mazj.pojo.User">
        select * from sys_user where user_id = #{id}
    </select>

    <insert id="addUser" parameterType="com.mazj.pojo.User">
        insert into sys_user (user_name, password, create_time) values (#{user_name}, '5c240a50a8727aaafc342e06ab828b1d', current_timestamp)
    </insert>

    <update id="updateUser" parameterType="com.mazj.pojo.User">
        update sys_user user_name = #{user_name}, password=#{password} where user_id = #{user_id}
    </update>

    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from sys_user where user_id = #{id}
    </delete>
</mapper>